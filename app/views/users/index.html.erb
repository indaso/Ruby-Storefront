<%= javascript_include_tag "users.js", "data-turbolinks-track" => false %>

<div class="container">
	<div class="help-text">
		<p>To edit the users, click on the edit button. This will bring you to a screen to edit the name, email or status of a user. To delete a user, click the "delete user" button.
		</p>
	</div>
	<br />
	<h1>Users List</h1>

	<div class="table-responsive">

		<table class="table table-hover">
			<tr>
				<td><b>Name<span class="help"> ?</span></b></td>
				<td><b>Email</b></td>
				<td><b>Status</b></td>
				<td><b>Edit User</b></td>
				<td><b>Remove User</b></td>
			</tr>
			<% @users.each do |user| %>
			<tr>
				<td><%= link_to user.name, user_path(user.id) %></td>
				<td><%=user.email%></td>
				<td><%=user.level%></td>
				<td><%=link_to "Edit User", edit_user_path(user.id), :class => "btn btn-primary btn-sm" %></td>
				<td><%=link_to "Delete User", user, confirm: "Are you sure you want to delete this user?", method: :delete, :class => "btn btn-primary btn-sm" %> </td>
			</tr>
			<%end%>
		</table>
	</div>
</div>