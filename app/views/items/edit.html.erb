<div class="container specborder">
	<h1>Edit Item</h1>

	<%= form_for @item, :html => { :class => 'form-search' } do |f| %>
		<div class="form-group">
			<label>Name</label>
			<%=f.text_field :item_name, :class => 'form-control'%>
		</div>
		<div class="form-group">
			<label>Amount</label>
			<%=f.text_field :amount, :class => 'form-control'%>
		</div>
		<div class="form-group">
			<label>Price</label>
			<%=f.text_field :price, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<label>Updated By</label>
			<%=f.collection_select :user_id, User.all, :id, :name%>
		</div>
		<div class="actions">
			<%=f.submit "Add Item", :class => "btn btn-primary btn-sm"%>
		</div>
	<%end%>
</div>