  <div class="table-responsive">
    <table class="table table-hover">
      <tr>
        <th><%= link_to "Item Name", :sort => "item_name" %><span class="help"> ?</span></th>
        <th><%= link_to "Amount", :sort => "amount" %></th>
        <th><%= link_to "Price", :sort => "price" %></th>
        <th>Updated Last By</th>
        <th>Edit Item</th>
        <th>Remove Item</th>
      </tr>
      <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.item_name, item_path(item.id) %></td>
        <td><%=item.amount%></td>
        <td><%=number_to_currency(item.price)%></td>
        <td><%= link_to item.user.name, user_path(item.user.id) %></td>
        <td><%=link_to "Edit Item", edit_item_path(item.id), :class => "btn btn-primary btn-sm" %></td>
        <td><%= link_to "Remove Item", item, confirm: "Are you sure you want to delete this item?", method: :delete, :class => "btn btn-primary btn-sm" %></td>
      </tr>
      <%end%>
    </table>
  </div>