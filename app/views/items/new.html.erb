<div class="container specborder">
	<h1>New Item</h1>
	<div class="err msg">
		<% if @item.errors.any? %>
		<ul>
			<% @item.errors.full_messages.each do |msg| %>
			<li><%=msg%></li>
			<%end%>
		</ul>
		<%end%>
	</div>
	<%= form_for @item, :html => { :class => 'form-search' } do |f| %>
		<div class="form-group">
			<label>Name</label>
			<%=f.text_field :item_name, :class => 'form-control'%>
		</div>
		<div class="form-group">
			<label>Amount</label>
			<%=f.text_field :amount, :class => 'form-control'%>
		</div>
		<div class="form-group">
			<label>Price</label>
			<%=f.text_field :price, :class => 'form-control' %>
		</div>
		<div class="form-group">
			<label>Updated By</label>
			<%=f.collection_select :user_id, User.all, :id, :name, {}, :class => 'btn btn-primary btn-sm'%>
		</div>
		<div class="actions">
			<%=f.submit "Add Item", :class => "btn btn-primary btn-sm"%>
		</div>
	<%end%>
</div>